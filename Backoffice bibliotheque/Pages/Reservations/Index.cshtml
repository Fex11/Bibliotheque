@page
@model Backoffice_bibliotheque.Pages.Reservations.IndexModel
@{
    ViewData["Title"] = "Reservations";
}

<h2>📚 Reservation Queues</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Book</th>
            <th>Pending Reservations</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var b in Model.Books)
    {
        <tr>
            <td>@b.BookTitle</td>
            <td>@b.PendingCount</td>
            <td>
                <a asp-page="Queue" asp-route-bookId="@b.BookId"
                   class="btn btn-sm btn-primary">
                    View Queue
                </a>
            </td>
        </tr>
    }
    </tbody>
</table>
