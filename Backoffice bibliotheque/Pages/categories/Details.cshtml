@page
@model Backoffice_bibliotheque.Pages.categories.DetailsModel

@{
    ViewData["Title"] = "Categories";
}


<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                Category Information
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item"><strong>@Html.DisplayNameFor(model => model.Category.Name):</strong> @Html.DisplayFor(model => model.Category.Name)</li>
                <li class="list-group-item"><strong>@Html.DisplayNameFor(model => model.Category.Description):</strong> @Html.DisplayFor(model => model.Category.Description)</li>
                <li class="list-group-item"><strong>@Html.DisplayNameFor(model => model.Category.CreatedAt):</strong> @Model.Category.CreatedAt.ToString("yyyy-MM-dd")</li>
                <li class="list-group-item"><strong>@Html.DisplayNameFor(model => model.Category.UpdatedAt):</strong> @Model.Category.UpdatedAt.ToString("yyyy-MM-dd")</li>
            </ul>
            <div class="card-body d-flex justify-content-start">
                <a asp-page="./Edit" asp-route-id="@Model.Category?.Id" class="btn btn-warning me-2">
                    <i class="bi bi-pencil-square me-1"></i> Edit
                </a>
                <a asp-page="./Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left me-1"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</div>
