@page
@model Backoffice_bibliotheque.Pages.categories.DeleteModel

@{
    ViewData["Title"] = "Categories";
}


<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-header bg-danger text-white">
                Confirm Deletion
            </div>
            <div class="card-body">
                <p class="mb-4">Are you sure you want to delete this category?</p>

                <ul class="list-group list-group-flush mb-3">
                    <li class="list-group-item"><strong>@Html.DisplayNameFor(model => model.Category.Name):</strong> @Html.DisplayFor(model => model.Category.Name)</li>
                    <li class="list-group-item"><strong>@Html.DisplayNameFor(model => model.Category.Description):</strong> @Html.DisplayFor(model => model.Category.Description)</li>
                    <li class="list-group-item"><strong>@Html.DisplayNameFor(model => model.Category.CreatedAt):</strong> @Model.Category.CreatedAt.ToString("yyyy-MM-dd")</li>
                    <li class="list-group-item"><strong>@Html.DisplayNameFor(model => model.Category.UpdatedAt):</strong> @Model.Category.UpdatedAt.ToString("yyyy-MM-dd")</li>
                </ul>

                <form method="post" class="d-flex justify-content-start">
                    <input type="hidden" asp-for="Category.Id" />
                    <button type="submit" class="btn btn-danger me-2">
                        <i class="bi bi-trash me-1"></i> Delete
                    </button>
                    <a asp-page="./Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left me-1"></i> Back to List
                    </a>
                </form>
            </div>
        </div>
    </div>
</div>
