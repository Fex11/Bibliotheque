@page
@model Backoffice_bibliotheque.Pages.User.ListModel

@{
    ViewData["Title"] = "Users";
}

<h2>Library Users</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Date Registered</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.LibraryUsers)
        {
            <tr>
                <td>@user.FirstName @user.LastName</td>
                <td>@user.Email</td>
                <td>@user.PhoneNumber</td>
                <td>@user.CreatedAt.ToString("dd/MM/yyyy")</td>
                <td>
                    <a asp-page="./LoanUser" asp-route-id="@user.Id" class="btn btn-sm btn-secondary">Voir Emprunt</a>
                </td>
            </tr>
        }
    </tbody>
</table>
