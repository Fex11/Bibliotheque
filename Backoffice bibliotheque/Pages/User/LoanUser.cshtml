@page
@model Backoffice_bibliotheque.Pages.User.LoanUserModel

@{
    ViewData["Title"] = "Users";
}

<h2>Emprunts de @Model.User.Username</h2>

<table class="table table-striped mt-3">
    <thead>
        <tr>
            <th>Book Title</th>
            <th>Barcode</th>
            <th>Location</th>
            <th>Loan Date</th>
            <th>Due Date</th>
            <th>Return Date</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var loan in Model.Loans)
        {
            <tr>
                <td>@loan.BookCopy.BookTitleSnapshot</td>
                <td>@loan.BookCopy.Barcode</td>
                <td>@loan.BookCopy.ShelfLocation</td>
                <td>@loan.LoanDate.ToString("dd/MM/yyyy")</td>
                <td>@loan.DueDate.ToString("dd/MM/yyyy")</td>
                <td>@(loan.ReturnDate.HasValue ? loan.ReturnDate.Value.ToString("dd/MM/yyyy") : "-")</td>
                <td>@loan.Status</td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <a asp-page="./List" class="btn btn-secondary">Retour à la liste des utilisateurs</a>
</div>
