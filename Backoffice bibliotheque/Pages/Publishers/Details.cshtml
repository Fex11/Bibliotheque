@page
@model Backoffice_bibliotheque.Pages.Publishers.DetailsModel

@{
    ViewData["Title"] = "Publishers";
}


<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                Publisher Information
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item"><strong>@Html.DisplayNameFor(model => model.Publisher.Name):</strong> @Html.DisplayFor(model => model.Publisher.Name)</li>
                <li class="list-group-item"><strong>@Html.DisplayNameFor(model => model.Publisher.Country):</strong> @Html.DisplayFor(model => model.Publisher.Country)</li>
                <li class="list-group-item"><strong>@Html.DisplayNameFor(model => model.Publisher.City):</strong> @Html.DisplayFor(model => model.Publisher.City)</li>
                <li class="list-group-item"><strong>@Html.DisplayNameFor(model => model.Publisher.CreatedAt):</strong> @Model.Publisher.CreatedAt.ToString("yyyy-MM-dd")</li>
                <li class="list-group-item"><strong>@Html.DisplayNameFor(model => model.Publisher.UpdatedAt):</strong> @Model.Publisher.UpdatedAt.ToString("yyyy-MM-dd")</li>
            </ul>
            <div class="card-body d-flex justify-content-start">
                <a asp-page="./Edit" asp-route-id="@Model.Publisher?.Id" class="btn btn-warning me-2">
                    <i class="bi bi-pencil-square me-1"></i> Edit
                </a>
                <a asp-page="./Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left me-1"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</div>
