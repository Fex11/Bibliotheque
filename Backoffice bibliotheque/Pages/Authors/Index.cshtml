@page
@model Backoffice_bibliotheque.Pages.Authors.IndexModel

@{
    ViewData["Title"] = "Authors";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <a asp-page="Create" class="btn btn-primary">
        <i class="bi bi-plus-lg"></i> Add New Author
    </a>
    <input type="text" class="form-control w-25" placeholder="Search..." />
</div>

<table class="table table-striped table-hover table-bordered align-middle">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Author[0].FirstName)</th>
            <th>@Html.DisplayNameFor(model => model.Author[0].LastName)</th>
            <th>@Html.DisplayNameFor(model => model.Author[0].BirthYear)</th>
            <th>@Html.DisplayNameFor(model => model.Author[0].DeathYear)</th>
            <th>@Html.DisplayNameFor(model => model.Author[0].CreatedAt)</th>
            <th>@Html.DisplayNameFor(model => model.Author[0].UpdatedAt)</th>
            <th class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Author)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                <td>@Html.DisplayFor(modelItem => item.BirthYear)</td>
                <td>@Html.DisplayFor(modelItem => item.DeathYear)</td>
                <td>@item.CreatedAt.ToString("yyyy-MM-dd")</td>
                <td>@item.UpdatedAt.ToString("yyyy-MM-dd")</td>
                <td class="text-center">
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-1">
                        <i class="bi bi-pencil-square"></i> Edit
                    </a>
                    <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-sm btn-info me-1">
                        <i class="bi bi-eye"></i> Details
                    </a>
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                        <i class="bi bi-trash"></i> Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
