@page
@model Backoffice_bibliotheque.Pages.Authors.EditModel

@{
    ViewData["Title"] = "Authors";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <form method="post" class="card p-4 shadow-sm">
            <h5 class="card-title mb-3">Author Details</h5>

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <input type="hidden" asp-for="Author.Id" />

            <div class="mb-3">
                <label asp-for="Author.FirstName" class="form-label"></label>
                <input asp-for="Author.FirstName" class="form-control" />
                <span asp-validation-for="Author.FirstName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Author.LastName" class="form-label"></label>
                <input asp-for="Author.LastName" class="form-control" />
                <span asp-validation-for="Author.LastName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Author.BirthYear" class="form-label"></label>
                <input asp-for="Author.BirthYear" class="form-control" />
                <span asp-validation-for="Author.BirthYear" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Author.DeathYear" class="form-label"></label>
                <input asp-for="Author.DeathYear" class="form-control" />
                <span asp-validation-for="Author.DeathYear" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Author.Bio" class="form-label"></label>
                <textarea asp-for="Author.Bio" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Author.Bio" class="text-danger"></span>
            </div>


            <div class="d-flex justify-content-start">
                <button type="submit" class="btn btn-primary me-2">
                    <i class="bi bi-check-lg me-1"></i> Save
                </button>
                <a asp-page="./Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left me-1"></i> Back to List
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
